
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/StyleDoAn.css">
<div class="row" style="padding-bottom: 10px">
    <h3 style="text-align:center; font-weight:bold ;text-decoration:underline #ffd800">Đăng Ký Thành Viên</h3>
    <div class="col-lg-6" style="padding-left:20px">
        <table align="center" class="pull-right">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <tr style="height:40px">
                    <td style="text-align:right">Họ và tên: </td>
                    <td>
                        @Html.TextBox("tenKH")
                        @ViewData["Loi1"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td style="text-align:right">Tài khoản: </td>
                    <td>
                        @Html.TextBox("tenDN")
                        @ViewData["Loi2"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td style="text-align:right">Mật khẩu: </td>
                    <td>
                        @Html.TextBox("matKhau")
                        @ViewData["Loi3"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td style="text-align:right">Nhập lại mật khẩu: </td>
                    <td>
                        @Html.TextBox("matKhauNhapLai")
                        @ViewData["Loi4"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td style="text-align:right">Email: </td>
                    <td>
                        @Html.TextBox("Email")
                        @ViewData["Loi5"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td style="text-align:right">Số điện thoại: </td>
                    <td>
                        @Html.TextBox("sdt")
                        @ViewData["Loi6"]
                    </td>
                </tr>
                <tr style="height:40px">
                    <td style="text-align:right">Địa chỉ: </td>
                    <td>
                        @Html.TextBox("diaChi")
                    </td>
                </tr>
                <tr style="height:40px">
                    <td style="text-align:right">Ngày sinh: </td>
                    <td>
                        <input type="date" name="ngaySinh" />
                    </td>
                </tr>
                <tr style="height:40px">
                    <td></td>
                    <td>
                        <input type="submit" value="Đăng Ký" />
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-lg-3 " style="display:flex">
        <img src="~/Content/Hinh_web/register.jpg" alt="Thumbnail" class="pull-left" />
    </div>
</div>

