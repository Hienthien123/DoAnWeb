
@{
    ViewBag.Title = "GopY";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/StyleDoAn.css">
<div class="row" style="padding-bottom: 10px">
    <h4 style="color:red; text-align:center">@ViewBag.ThongBao</h4>
    <h3 style="text-align:center; font-weight:bold ;text-decoration:underline #ffd800">Góp Ý Cho Chúng Tui</h3>
    <div class="col-lg-6" style="padding-left:20px">
        <table align="center" class="pull-right">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <tr style="height:40px">
                    <td style="text-align:right">Họ và tên: </td>
                    <td>
                        @Html.TextBox("ten")
                    </td>
                </tr>
                <tr style="height:40px">
                    <td style="text-align:right">Số điện thoại: </td>
                    <td>
                        @Html.TextBox("so")
                    </td>
                </tr>
                <tr style="height:40px">
                    <td style="text-align:right">Ý kiến: </td>
                    <td>
                        @Html.TextBox("GopY")
                        @ViewData["Loi1"]
                    </td>
                </tr>

                <tr style="height:40px">
                    <td></td>
                    <td>
                        <input type="submit" value="Góp Ý" />
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-lg-3 " style="display:flex">
        <img src="~/Content/Hinh_web/GopY.jpg" alt="Thumbnail" class="pull-left" />
    </div>
</div>

